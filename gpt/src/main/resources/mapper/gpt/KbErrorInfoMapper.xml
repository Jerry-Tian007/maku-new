<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gpt.mapper.KbErrorInfoMapper">
    
    <resultMap type="KbErrorInfo" id="KbErrorInfoResult">
        <result property="id"    column="id"    />
        <result property="deptId"    column="dept_id"    />
        <result property="userId"    column="user_id"    />
        <result property="errorInfo"    column="error_info"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="remark"    column="remark"    />
        <result property="type"    column="type"    />
    </resultMap>

    <sql id="selectKbErrorInfoVo">
        select id, dept_id, user_id, error_info, create_time, create_by, remark,`type` from kb_error_info
    </sql>

    <select id="selectKbErrorInfoList" parameterType="KbErrorInfo" resultMap="KbErrorInfoResult">
        <include refid="selectKbErrorInfoVo"/>
        <where>  
            <if test="deptId != null "> and dept_id = #{deptId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="errorInfo != null  and errorInfo != ''"> and error_info = #{errorInfo}</if>
        </where>
    </select>
    
    <select id="selectKbErrorInfoById" parameterType="Long" resultMap="KbErrorInfoResult">
        <include refid="selectKbErrorInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertKbErrorInfo" parameterType="KbErrorInfo">
        insert into kb_error_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="errorInfo != null">error_info,</if>
            <if test="createTime != null">create_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="remark != null">remark,</if>
            <if test="type != null">`type`,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="errorInfo != null">#{errorInfo},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="remark != null">#{remark},</if>
            <if test="type != null">#{type},</if>
         </trim>
    </insert>

    <update id="updateKbErrorInfo" parameterType="KbErrorInfo">
        update kb_error_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="errorInfo != null">error_info = #{errorInfo},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="type != null">`type` = #{type},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteKbErrorInfoById" parameterType="Long">
        delete from kb_error_info where id = #{id}
    </delete>

    <delete id="deleteKbErrorInfoByIds" parameterType="String">
        delete from kb_error_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>