<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gpt.mapper.KbPersonalPromptMapper">
    <resultMap type="com.ruoyi.gpt.model.vo.personal_prompt.PersonalPromptPageVO" id="personalPromptPageVOResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="prompt" column="prompt"/>
        <result property="userId" column="user_id"/>
        <result property="releaseStatus" column="release_status"/>
        <result property="kbManagerId" column="kb_manager_id"/>
    </resultMap>

    <resultMap type="com.ruoyi.gpt.model.vo.personal_prompt.PersonalPromptInfoVO" id="personalPromptInfoVOResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="prompt" column="prompt"/>
        <result property="userId" column="user_id"/>
        <result property="releaseStatus" column="release_status"/>
        <result property="kbManagerId" column="kb_manager_id"/>
    </resultMap>

    <select id="pageList"
            parameterType="com.ruoyi.gpt.model.dto.personal_prompt.PersonalPromptPageQryDto"
            resultMap="personalPromptPageVOResult">
        select id,
        name,
        prompt,
        user_id,
        release_status,
        kb_manager_id
        from kb_personal_prompt
        <where>
            user_id = #{userId}
            and query_prompt_type is null
            and kb_manager_id in
            <foreach item="kbManagerId" collection="kbManagerIds" open="(" separator="," close=")">
                #{kbManagerId}
            </foreach>
            <if test="name != null and name != ''">
                and `name` like concat('%', #{name}, '%')
            </if>
        </where>
    </select>

    <insert id="add" parameterType="PersonalPromptEntity">
        insert into kb_personal_prompt(
        <if test="name != null">id</if>,
        <if test="name != null">name,</if>
        <if test="prompt != null">prompt,</if>
        <if test="userId != null">user_id,</if>
        <if test="releaseStatus != null">release_status,</if>
        <if test="remark != null">remark,</if>
        create_by,
        create_time)
        values (
        <if test="name != null">#{id}</if>,
        <if test="name != null">#{name},</if>
        <if test="prompt != null">#{prompt},</if>
        <if test="userId != null">#{userId},</if>
        <if test="releaseStatus != null">#{releaseStatus},</if>
        <if test="remark != null">#{remark},</if>
        #{createBy},
        #{createTime})
    </insert>

    <update id="updateById" parameterType="PersonalPromptEntity">
        update kb_personal_prompt
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="prompt != null">
                prompt = #{prompt},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="releaseStatus != null">
                release_status = #{releaseStatus},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <update id="release">
        update kb_personal_prompt
        set release_status = #{releaseStatus}
        where id = #{id}
    </update>

    <update id="updateByIds">
        update kb_personal_prompt
        set kb_manager_id = #{promptEntity.kbManagerId}, update_by = #{promptEntity.updateBy}, update_time = #{promptEntity.updateTime}
        where id in
        <foreach item="promptId" collection="promptIds" open="(" separator="," close=")">
            #{promptId}
        </foreach>
    </update>

    <delete id="deleteById" parameterType="long">
        delete
        from kb_personal_prompt
        where id = #{id}
    </delete>

    <select id="getById" parameterType="long" resultMap="personalPromptInfoVOResult">
        select id,
               name,
               prompt,
               user_id,
               release_status
        from kb_personal_prompt
        where id = #{id}
    </select>

    <select id="kbManagerSelectPromptList" resultMap="personalPromptInfoVOResult">
        select id,
               name,
               prompt,
               user_id,
               release_status,
               kb_manager_id
        from kb_personal_prompt
        <where>
            user_id = #{userId} and kb_manager_id is null and query_prompt_type is null
            <if test="kbManagerId != null">
                or kb_manager_id = #{kbManagerId}
            </if>
        </where>
    </select>
</mapper>
