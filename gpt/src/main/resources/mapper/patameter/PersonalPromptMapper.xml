<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gpt.mapper.PersonalPromptMapper">
    <resultMap type="com.ruoyi.gpt.model.vo.personal_prompt.PersonalPromptPageVO" id="personalPromptPageVOResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="prompt" column="prompt"/>
        <result property="userId" column="user_id"/>
        <result property="releaseStatus" column="release_status"/>
    </resultMap>

    <resultMap type="com.ruoyi.gpt.model.vo.personal_prompt.PersonalPromptInfoVO" id="personalPromptInfoVOResult">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="prompt" column="prompt"/>
        <result property="userId" column="user_id"/>
        <result property="releaseStatus" column="release_status"/>
    </resultMap>

    <select id="pageList"
            parameterType="com.ruoyi.gpt.model.dto.personal_prompt.PersonalPromptInfoQryDto"
            resultMap="personalPromptPageVOResult">
        select id,
        name,
        prompt,
        user_id,
        release_status
        from personal_prompt
        <where>
            user_id = #{userId}
            <if test="name != null and name != ''">
                and `name` like concat('%', #{name}, '%')
            </if>
        </where>
    </select>

    <insert id="add" parameterType="PersonalPromptEntity">
        insert into personal_prompt(
        <if test="name != null">id</if>,
        <if test="name != null">name,</if>
        <if test="prompt != null">prompt,</if>
        <if test="userId != null">user_id,</if>
        <if test="releaseStatus != null">release_status,</if>
        <if test="remark != null">remark,</if>
        create_by,
        create_time)
        values (
        <if test="name != null">#{id}</if>,
        <if test="name != null">#{name},</if>
        <if test="prompt != null">#{prompt},</if>
        <if test="userId != null">#{userId},</if>
        <if test="releaseStatus != null">#{releaseStatus},</if>
        <if test="remark != null">#{remark},</if>
        #{createBy},
        #{createTime})
    </insert>

    <update id="updateById" parameterType="PersonalPromptEntity">
        update personal_prompt
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="prompt != null">
                prompt = #{prompt},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="releaseStatus != null">
                release_status = #{releaseStatus},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>
    <update id="release">
        update personal_prompt
        set release_status = #{releaseStatus}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="long">
        delete
        from personal_prompt
        where id = #{id}
    </delete>

    <select id="getById" parameterType="long" resultMap="personalPromptInfoVOResult">
        select id,
               name,
               prompt,
               user_id,
               release_status
        from personal_prompt
        where id = #{id}
    </select>

</mapper>
